let lib_config : Config {
	.defines += [
		"QT_BUILD_WIDGETS_LIB"
		"QT_NO_STYLE_WINDOWSVISTA" "QT_NO_STYLE_ANDROID" "QT_NO_STYLE_GTK"
		"QT_NO_STYLE_WINDOWSXP" "QT_NO_STYLE_WINDOWSCE" "QT_NO_STYLE_WINDOWSMOBILE" 
		"QT_NO_STATEMACHINE"
	]
	
	if ^QT_STYLE_OVERRIDE != "" {
		.defines += "QT_STYLE_OVERRIDE=\"" + ^QT_STYLE_OVERRIDE + "\""
	}
}

let config * : Config {
	.include_dirs += [
		../includes/QtWidgets
	]
	
	if !^HAVE_GRAPHICS {
		.defines += "QT_NO_GRAPHICSVIEW"
	}
	
	if !^HAVE_ITEMVIEWS {
		.defines += "QT_NO_ITEMVIEWS"
		# QT_NO_ITEMVIEWS causes the following:
		.defines += [ "QT_NO_PROXYMODEL" "QT_NO_COMPLETER" "QT_NO_IDENTITYPROXYMODEL" 
					"QT_NO_SORTFILTERPROXYMODEL" "QT_NO_CALENDARWIDGET" "QT_NO_COMBOBOX"
					"QT_NO_FILEDIALOG" ]
	}
}

let err : Message {
	.text = "widget module requires HAVE_GUI"
}

let images : Rcc {
	.tool_dir = root_build_dir + ^root_path;
	.sources += ./images.qrc
}

let run_moc : Moc {
	.tool_dir = root_build_dir + ^root_path;
	.sources += [		
		./qabstractbutton.h
		./qabstractscrollarea.h
		./qabstractscrollarea_p.h
		./qabstractslider.h
		./qabstractspinbox.h
		./qactiongroup.h
		./qaction.h
		./qapplication.h
		./qboxlayout.h
		./qbuttongroup.h
		./qcheckbox.h
		./qcolordialog.cpp
		./qcolordialog.h
		./qcommandlinkbutton.h
		./qcommonstyle.h
		./qdesktopwidget.h
		./qdesktopwidget_p.h
		./qdial.h
		./qdialogbuttonbox.h
		./qdialog.h
		./qdockwidget.cpp
		./qdockwidget.h
		./qdockwidget_p.h
		./qerrormessage.h
		./qfocusframe.h
		./qformlayout.h
		./qframe.h
		./qfusionstyle_p.h
		./qgridlayout.h
		./qgroupbox.h
		./qkeysequenceedit.h
		./qlabel.h
		./qlayout.h
		./qlcdnumber.h
		./qlineedit.h
